  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.0.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
