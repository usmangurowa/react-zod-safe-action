{
  "compilerOptions": {
    "target": "esnext",

    "module": "esnext",

    "moduleResolution": "node",

    "lib": ["esnext"],

    "allowJs": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "sourceMap": true,

    "outDir": "dist"
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", "dist"]
}
